#include <stdio.h>

int main() {
    int s[] = {4, 5, 2, 1, 3};
    int n = sizeof(s) / sizeof(s[0]);
    int is_sorted = 1;
    for (int i = 0; i < n - 1; i++) {
        if (s[i] > s[i + 1]) {
            is_sorted = 0;
            break;
        }
    }
    printf("Array: ");
    for (int i = 0; i < n; i++) {
        printf("%d ", s[i]);
    }
    printf("\n");
    if (is_sorted) {
        printf("The array is sorted in ascending order.\n");
    } else {
        printf("The array is not sorted in ascending order.\n");
    }
    return 0;
}
